<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chj.ftattendanceassistant.activity.MainActivity">

    <com.example.chj.ftattendanceassistant.myview.UserTitleBar
        android:id="@+id/activity_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
    </com.example.chj.ftattendanceassistant.myview.UserTitleBar>

    <View
        android:id="@+id/activity_main_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/activity_main_title"
        android:background="#333333" />

    <com.example.chj.ftattendanceassistant.myview.CustomViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_main_line2"
        android:layout_below="@+id/activity_main_line1"
        >
    </com.example.chj.ftattendanceassistant.myview.CustomViewPager>

    <View
        android:id="@+id/activity_main_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/home_tabBarView"
        android:background="#333333" />

    <com.example.chj.ftattendanceassistant.myview.TabBarView
        android:id="@+id/home_tabBarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
    </com.example.chj.ftattendanceassistant.myview.TabBarView>


</RelativeLayout>
